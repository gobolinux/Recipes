# Recipe for version 2.8.12.1 by Lucas C. Villa Real <lucasvr@gobolinux.org>, on Wed May 9 20:17:03 BRT 2012
# Recipe (MakeRecipe) for WxPython by Lucas Correia Villa Real <lucasvr@gobolinux.org>, on Tue Aug 9 11:10:29 BRT 2005
compile_version=1.8.0
url="https://downloads.sourceforge.net/wxpython/wxPython-src-2.8.12.1.tar.bz2"
file_size=31311482
file_md5=8c06c5941477beee213b4f2fa78be620
recipe_type=configure

configure_options=(
        "--with-gtk"
        "--with-opengl"
        "--with-sdl"
        "--enable-display"
        "--enable-geometry"
        "--enable-graphics_ctx"
        "--enable-intl"
        "--enable-sound"
        "--enable-unicode"
        "--enable-optimize"
        "--disable-monolithic"
)

pre_link() {
    # Fixes a broken link wx-config -> /usr/lib/wx/config/gtk2-unicode-release-2.8
    if [ -h $target/bin/wx-config ]
    then
        rm -f $target/bin/wx-config
        cp wx-config $target/bin/wx-config
    fi

    # Force copy of all headers
    mkdir -p $target/include/wx-2.8/wx
    cp -a include/wx/* $target/include/wx-2.8/wx

    # Put wx-config on the PATH
    export PATH=$PATH:$target/bin

    make -C contrib/src/gizmos
    make -C contrib/src/gizmos install
    make -C contrib/src/stc
    make -C contrib/src/stc install

    Quiet pushd wxPython
    python_opts="WXPORT=gtk2 UNICODE=1 EP_ADD_OPTS=1 NO_SCRIPTS=1 build_ext"
    python setup.py $python_opts build
    python setup.py $python_opts install --prefix=$target
    for s in \
        editra \
        helpviewer \
        img2png \
        img2py \
        img2xpm \
        pyalacarte \
        pyalamode \
        pycrust \
        pywrap \
        pyshell \
        pywxrc \
        xrced
    do
        cp scripts/$s $target/bin
    done
    Quiet popd

    Quiet pushd $target/include
    ln -fs wx-2.8/wx .
    Quiet popd
}
