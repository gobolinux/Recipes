makefile='Makefile'

# slight modification by Hisham Muhammad.
# a 'kernel_version' variable will be added to Compile.
KERNEL=`uname -r`

make_variables=(
    SHFSMOUNT=/bin/shfsmount
    ROOT=$target
    MAN_PAGE_DIR=/man/
    HTML_DOC_DIR=/doc/html/
    KERNEL_SOURCES=/lib/modules/${KERNEL}/build
)
