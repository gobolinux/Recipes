compile_version=1.7.1
url="ftp://ftp.pld.org.pl/software/shadow/shadow-4.0.11.1.tar.bz2"
recipe_type=configure

configure_options=(
	"--enable-shared"
	"--enable-static"
	"--without-libpam"
        "--disable-shadowgrp"
)

pre_build() {
	aclocal 2> /dev/null
	automake
}

