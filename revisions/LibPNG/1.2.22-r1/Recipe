url=$httpSourceforge/libpng/libpng-1.2.22.tar.bz2
file_size=614414
file_md5=e50208ad684a5822c74b8a260962a4d4
recipe_type=configure
configure_options=(
   "--mandir=${target}/man"
)

pre_link() {
    ln -sf libpng12 $target/include/libpng
    ln -sf libpng.so $target/lib/libpng.so.0
}
