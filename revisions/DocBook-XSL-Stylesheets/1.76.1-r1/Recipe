pre_install() {
   cat <<EOF > "$target/Resources/XmlCatalogData"
rewriteSystem;http://docbook.sourceforge.net/release/xsl/current/;file://\${target}/Shared/xml/docbook/stylesheet/docbook-xsl/;\${goboVariable}/lib/xml$
