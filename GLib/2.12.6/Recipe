# Recipe for version 2.12.6 by Olivier Maugé, on Fri Jan 5 00:33:00 CET 2007
# Recipe (MakeRecipe) for GLib by  Ozgur Ulukir, on Mon Dec 20 01:48:37 EET 2004
compile_version=1.8.0
url="http://ftp.gnome.org/pub/GNOME/sources/glib/2.12/glib-2.12.6.tar.bz2"
recipe_type=configure

pre_link() {
    Quiet pushd $target/lib/pkgconfig
    for i in *; do ln -s $i `echo $i | sed 's/-2.0//g'`; done
    Quiet popd
}
