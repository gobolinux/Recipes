    PREFIX="$target"
)

build_variables=(
    GZIP_SUPPORT=1
    LZ4_SUPPORT=1
    LZMA_XZ_SUPPORT=1
    LZO_SUPPORT=1
    XATTR_SUPPORT=1
    XZ_SUPPORT=1
    ZSTD_SUPPORT=1
)

pre_link() {
    cp mksquashfs unsquashfs $target/bin/
}
