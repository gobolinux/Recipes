+	ret = (struct unionfs_dentry_info *)(dent)->d_fsdata;
+	/* We are really only interested in catching poison here. */
+	if (ret) {
+		if (check) {
+			if ((ret->udi_bend > ret->udi_bcount)
+			    || (ret->udi_bend > sbmax(dent->d_sb))) {
+				printk(KERN_EMERG
