+static ssize_t __fread(struct file *filp, void *buf, size_t size, loff_t * pos)
+{
+	int err;
+	mm_segment_t oldfs;
+
+	oldfs = get_fs();
+	set_fs(KERNEL_DS);
+	if (filp->f_op->read)
+		err = filp->f_op->read(filp, (char __user *)buf, size, pos);
+	else
+		err = do_sync_read(filp, (char __user *)buf, size, pos);
+	set_fs(oldfs);
+	return err;
+}
