+static ssize_t __fwrite(struct file *filp, void *buf, size_t size, loff_t * pos)
+{
+	int err;
+	mm_segment_t oldfs;
+
+	oldfs = get_fs();
+	set_fs(KERNEL_DS);
+	if (filp->f_op->write)
+		err =
+		    filp->f_op->write(filp, (const char __user *)buf, size,
+				      pos);
+	else
+		err = do_sync_write(filp, (const char __user *)buf, size, pos);
+	set_fs(oldfs);
+	return err;
