# by Hisham Muhammad, Guilherme Bedin

url="$ftpGnu/gcc/gcc-3.4.0/gcc-3.4.0.tar.bz2"
compile_version=1.7.1
recipe_type=configure
needs_build_directory=yes
configure_options=(
   "--enable-shared"
   "--enable-threads=posix"
   "--enable-__cxa_atexit"
   "--enable-clocale=gnu"
   "--enable-languages=c,c++,objc"
)
pre_link() {
   cd "$target/bin"
   ln -s gcc cc
   cd "$target/lib"
   ln -s "$target/bin/cpp" .
   rm -f libiberty.a
   cd "$goboExecutables"
   ln -nsf "$target/bin/cc" .
   cd "$goboLibraries"
   ln -nsf "$target/lib/cpp" .
}
