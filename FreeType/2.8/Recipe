url="https://download.savannah.gnu.org/releases/freetype/freetype-2.8.tar.bz2"
file_size=1873526
file_md5=2413ac3eaf508ada019c63959ea81a92
compile_version=2.0
recipe_type=configure

# XFree86 also has a FreeType; We want this one to be the dominant FreeType
symlink_options=(
   "--conflict=overwrite"
)

make_variables=(
	C_INCLUDE_PATH=
)

pre_link() {
	cd $target/include
	ln -s freetype2 freetype
}
